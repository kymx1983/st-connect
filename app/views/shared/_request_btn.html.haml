- if current_user.following?(@user)
  = form_for(current_user.relationships.find_by(following_id: @user.id), html: { method: :delete }) do |f|
    = f.hidden_field :following_id, value: @user.id
    = f.submit 'リクエスト済み', class: 'follow_done_btn'
- else
  = form_for(current_user.relationships.build) do |f|
    = f.hidden_field :following_id, value: @user.id
    = f.submit 'リクエストを送る', class: 'follow_btn'